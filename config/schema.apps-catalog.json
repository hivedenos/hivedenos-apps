{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hiveden Apps Catalog",
  "type": "object",
  "required": ["version", "generated_at", "total_apps", "apps"],
  "properties": {
    "version": { "type": "string" },
    "generated_at": { "type": "string" },
    "total_apps": { "type": "integer", "minimum": 0 },
    "apps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "version", "tagline", "description", "repository_path", "icon_url", "image_urls", "source", "install", "search", "updated_at"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "tagline": { "type": "string" },
          "description": { "type": "string" },
          "developer": { "type": "string" },
          "repository_path": { "type": "string", "minLength": 1 },
          "icon_url": { "type": ["string", "null"] },
          "image_urls": {
            "type": "array",
            "items": { "type": "string" }
          },
          "source": {
            "type": "object",
            "required": ["id", "repo", "commit", "path"],
            "properties": {
              "id": { "type": "string" },
              "repo": { "type": "string" },
              "commit": { "type": "string" },
              "path": { "type": "string" }
            },
            "additionalProperties": true
          },
          "install": {
            "type": "object",
            "required": ["method", "files"],
            "properties": {
              "method": { "type": "string" },
              "files": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              }
            },
            "additionalProperties": true
          },
          "search": {
            "type": "object",
            "required": ["keywords", "categories"],
            "properties": {
              "keywords": { "type": "array", "items": { "type": "string" } },
              "categories": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": true
          },
          "updated_at": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
